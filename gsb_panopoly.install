      'filter_html' => array(
        'weight' => 1,
        'status' => 1,
        'settings' => array(
          'allowed_html' => '<hr> <u> <object> <area> <caption> <embed> <pre> <address> <abbr> <span> <script> <iframe> <br> <p> <h1> <h2> <h3> <h4> <h5> <h6> <a> <em> <strong> <cite> <blockquote> <ul> <ol> <li> <dl> <dt> <dd> <img> <table> <tbody> <thead> <th> <tr> <td> <div>',
